<section class="pt-24 md:pt-28 lg:pt-32 bg-default min-h-screen">
  <div class="container mx-auto py-20 px-8">
    <h1 class="title mb-4">Edit Portfolio</h1>
    <div class="flex justify-center items-center">
      <%= form_with model: [ :admin, @portfolio ], local: true, html: { multipart: true } do |f| %>
        <div class="mb-4 space-y-3">
          <%= f.label :photos, "Select Images", class: "block font-bold text-lg" %>
          <%= f.file_field :photos, multiple: true, class: "btn-primary" %>
          <%= f.submit "Update", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="gallery-grid" data-controller="fancybox">
      <% @portfolio.photos.each do |photo| %>
        <div class="aspect-[3/4] relative group overflow-hidden rounded-lg">
          <%= button_to "Delete", admin_destroy_portfolio_photo_path(photo), method: :delete, data: {confirm: "Are you sure?"}, class: "btn-gold absolute" %>
          <%= image_tag photo, quality: "auto", class: "w-full h-full object-cover" %>
        </div>
      <% end %>
    </div>
    <%= link_to "Dashboard", admin_root_path %>
  </div>
</section>
