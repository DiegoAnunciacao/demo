<section class="pt-24 md:pt-28 lg:pt-32 bg-default min-h-screen">
  <div class="container mx-auto py-20 px-8">
    <h1 class="text-4xl text-center">New Gallery</h1>
    <div class="flex justify-center items-center">
      <%= form_with model: [ :admin, @gallery ], local: true, html: { multipart: true } do |f| %>
        <div class="mb-4">
          <div class="mb-6">
            <%= f.label :title, class: "block font-bold text-lg mb-1" %>
            <%= f.text_field :title, required: true, class: "border rounded-md px-3 py-2 w-full" %>
          </div>
          <div class="mb-6">
            <div class="flex items-center gap-2">
              <%= f.label :cover_img, "Select Cover Image:", class: "block font-bold text-lg mb-1" %>
              <%= f.file_field :cover_img, class: "px-4 btn-primary" %>
            </div>
          </div>
          <div class="mb-6">
            <div class="flex items-center gap-2">
              <%= f.label :gallery_img, "Select Gallery Images:", class: "block font-bold text-lg mb-1" %>
              <%= f.file_field :gallery_img, multiple: true, class: "px-4 btn-primary" %>
            </div>
          </div>
          <%= f.submit "Create", class: "py-2 px-4 w-full btn-primary mt-4" %>
        </div>
      <% end %>
    </div>
    <%= link_to "Dashboard", admin_root_path %>
  </div>
</section>
